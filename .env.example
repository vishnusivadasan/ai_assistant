# OpenAI API Configuration
OPENAI_API_KEY=your_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview  # Options: gpt-4-turbo-preview, gpt-3.5-turbo, etc.

# Execution Mode
# Options: manual (ask before running commands), autonomous (run commands without asking)
DEFAULT_MODE=manual

# Advanced Configuration
# Maximum number of iterations for plan verification (default: 3)
MAX_PLAN_ITERATIONS=3

# Set to "true" to disable direct execution of shell commands
# This will make the agent only suggest commands without running them
NO_DIRECT_EXECUTION=false

# Set to "true" to disable query refinement via API
NO_REFINE_QUERIES=false 